
"==========================================
" 加载插件
"==========================================
if filereadable(expand("~/.vimrc.bundles"))
  source ~/.vimrc.bundles
endif




"==========================================
" 基本设置
"==========================================
" 取消备份
set nobackup
set noswapfile




"==========================================
"  显示设置
"==========================================
" 显示行号
set number

" 设置缩进的宽度
set tabstop=2

" 突出显示当前行
set cursorline
